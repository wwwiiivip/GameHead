<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">
<android.support.v7.widget.Toolbar
    android:background="@color/toolbar_red"
    android:layout_width="match_parent"
    android:layout_height="50dp">
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <ImageView
        android:id="@+id/toolbar_main_iv"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:src="@drawable/title_center_icon"
        android:layout_centerInParent="true"/>
    <ImageView
        android:id="@+id/toolbar_activity_iv"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        android:layout_marginRight="10dp"
        android:src="@drawable/activity_4x"/>
</RelativeLayout>
</android.support.v7.widget.Toolbar>
<android.support.v4.view.ViewPager
    android:id="@+id/news_main_fragment_viewpager"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    />
</RelativeLayout>