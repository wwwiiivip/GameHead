<?xml version="1.0" encoding="UTF-8"?>

<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/pager_drawerlayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/menu_background"
    tools:context="com.example.liwujingling.MainActivity">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#ffffff">

        <FrameLayout
            android:id="@+id/main_framlayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorPink"></FrameLayout>


        <RadioGroup
            android:id="@+id/home_bottom_rg"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:layout_alignParentBottom="true"
            android:orientation="horizontal"
            android:padding="10dp">

            <RadioButton
                android:id="@+id/homepage_gift_rb"
                android:layout_width="50dp"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_marginLeft="50dp"
                android:background="@drawable/homepage_gift_selector"
                android:button="@null"
                android:textColor="@color/radio_btn_selector" />

            <RadioButton
                android:id="@+id/homepage_game_rb"
                android:layout_width="50dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="89dp"
                android:background="@drawable/homepage_game_selector"
                android:button="@null"
                android:gravity="center" />

            <RadioButton
                android:id="@+id/homepage_play_rb"
                android:layout_width="50dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="89dp"
                android:background="@drawable/homepage_play_selector"
                android:button="@null"
                android:gravity="center" />

            <RadioButton
                android:id="@+id/homepage_mine_rb"
                android:layout_width="50dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="89dp"
                android:background="@drawable/homepage_mine_selector"
                android:button="@null"
                android:gravity="center" />

        </RadioGroup>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_above="@id/home_bottom_rg"
            android:background="@color/colorPink" />

        <FrameLayout
            android:id="@+id/home_page_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_above="@+id/home_bottom_rg"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@id/main_framlayout" />

    </RelativeLayout>

    <fragment
        android:id="@+id/expanded_menu"
        android:name="com.example.liwujingling.fragment_menu.MenuFragment"
        android:layout_width="300dp"
        android:layout_height="match_parent"
        android:layout_gravity="left"
        android:tag="Left" />

</android.support.v4.widget.DrawerLayout>